// Place your key bindings in this file to override the defaults
[
  { "key": "ctrl+h",       "command": "workbench.action.previousEditor" },
  { "key": "ctrl+l",       "command": "workbench.action.nextEditor" },
  { "key": "ctrl+f",       "command": "workbench.action.quickOpen" },
  { "key": "ctrl+q",       "command": "workbench.action.closeActiveEditor" },
  { "key": "ctrl+t",       "command": "workbench.action.terminal.toggleTerminal", "when": "terminal.active" },
  { "key": "ctrl+shift+t", "command": "workbench.action.terminal.openNativeConsole" },
  { "key": "ctrl+w",       "command": "" },
  {
    "key": "alt+v",
    "command": "vim.remap",
    "when": "inputFocus && vim.mode == 'Normal'",
    "args": {
      "after": ["<C-v>"]
    }
  },
  { "key": "ctrl+alt+l", "command": "workbench.action.focusNextGroup" },
  { "key": "ctrl+alt+h", "command": "workbench.action.focusPreviousGroup" },
  { "key": "ctrl+alt+n", "command": "workbench.action.splitEditorRight" },
  { "key": "ctrl+alt+p", "command": "workbench.action.splitEditorDown" },
  { "key": "ctrl+alt+q", "command": "workbench.action.closeGroup" },
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "sideBarFocus"
  },
]