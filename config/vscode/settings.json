{
    /* Editor settings
    --------------------------------------------------------------------------*/
    "editor.cursorBlinking": "solid",
	"editor.fontFamily": "IosevkaTerm NF, Consolas, 'Courier New', monospace",
	"editor.fontSize": 16,
    "editor.rulers": [
        80,
        100,
    ],

    /* Files settings
    --------------------------------------------------------------------------*/
    "files.associations": {
        "*.json": "jsonc"
    },

    /* File explorer settings
    --------------------------------------------------------------------------*/
    "explorer.confirmDelete": false,

    /* Terminal settings
    --------------------------------------------------------------------------*/
    "terminal.external.windowsExec": "wt.exe",
    "terminal.integrated.defaultProfile.windows": "PowerShell 7",
    "terminal.integrated.profiles.windows": {
        "PowerShell 5": {
            "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
        },
        "PowerShell 7": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
    },
	"terminal.integrated.fontSize": 16,

    /* Window settings
    --------------------------------------------------------------------------*/
    "window.customTitleBarVisibility": "windowed",
    "window.autoDetectHighContrast": false,

    /* Workbench settings
    --------------------------------------------------------------------------*/
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "Custom Theme",
    "workbench.preferredHighContrastColorTheme": "Custom Theme",
    "workbench.preferredDarkColorTheme": "Custom Theme",
    "workbench.editor.empty.hint": "hidden",

    /* VSCodeVim settings
    --------------------------------------------------------------------------*/
    "vim.handleKeys": {
        "<C-v>": false,
    },
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        /* Navigation */
        {
            "before": ["<C-j>"],
            "after": ["<C-d>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-u>"]
        },

        /* Editing */
        {
            "before": ["H"],
            "commands": [
                "editor.action.outdentLines"
            ],
        },
        {
            "before": ["L"],
            "commands": [
                "editor.action.indentLines"
            ],
        },

        /* Vim search */
        {
            "before": ["<leader>", "l"],
            "commands": [
                ":noh",
            ],
        },

        /* VSCode search */
        {
            "before": ["<leader>", ":"],
            "commands": [
                "workbench.action.showCommands"
            ],
        },
        {
            "before": ["<leader>", "g"],
            "commands": [
                "workbench.action.findInFiles"
            ],
        },
        {
            "before": ["<leader>", "f"],
            "commands": [
                "workbench.action.quickOpen"
            ],
        },

        /* VSCode sidebar */
        {
            "before": ["<leader>", "e"],
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ],
        },
        {
            "before": ["<leader>", "p"],
            "commands": [
                "workbench.extensions.action.focusExtensionsView"
            ],
        },
        {
            "before": ["<leader>", "d"],
            "commands": [
                "workbench.view.debug"
            ],
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["H"],
            "commands": [
                "editor.action.outdentLines"
            ],
        },
        {
            "before": ["L"],
            "commands": [
                "editor.action.indentLines"
            ],
        },
    ],
    "vim.useSystemClipboard": true,

    /* Other extension settings
    --------------------------------------------------------------------------*/
    "powershell.integratedConsole.showOnStartup": false,
    "redhat.telemetry.enabled": false,
    "Lua.diagnostics.globals": [
        "vim"
    ],
    "Lua.runtime.version": "Lua 5.1",
}